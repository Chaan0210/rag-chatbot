OPENAI_API_KEY=
DATABASE_URL=postgresql+asyncpg://rag_user:rag_password@localhost:5432/rag_db
PROJECT_NAME=RAG Chatbot
API_PREFIX=/api
CORS_ALLOW_ORIGINS=http://localhost:5173
DATA_DIR=data
AUTO_INGEST_ON_STARTUP=true

LLM_MODEL=gpt-5
EMBEDDING_MODEL=text-embedding-3-large
OPENAI_REASONING_EFFORT=minimal

EMBEDDING_DIMENSION=3072
EMBEDDING_BATCH_SIZE=32
EMBEDDING_MAX_CHARS=8000

CHUNK_SIZE=1400
CHUNK_OVERLAP=180

VECTOR_TOP_K=50
KEYWORD_TOP_K=50
KEYWORD_CANDIDATE_POOL_SIZE=2000
KEYWORD_RECENT_DOCS_LIMIT=8
ENABLE_TRIGRAM_SEARCH=true
FUSED_TOP_K=50
RERANK_TOP_K=8
ENABLE_RERANKER=false
RERANKER_MODEL=BAAI/bge-reranker-v2-m3
MAX_CONTEXT_CHUNKS=8
MAX_CONTEXT_CHARS=32000
MAX_HISTORY_MESSAGES=12
HISTORY_SUMMARY_TURNS=10
MAX_QUOTE_CHARS=280
MULTI_QUERY_COUNT=5
RETRIEVAL_MAX_ATTEMPTS=3
RETRIEVAL_QUALITY_THRESHOLD=0.55
STREAM_CHUNK_SIZE=1
STREAM_CHUNK_DELAY_MS=25
